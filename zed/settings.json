// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Ayu Dark",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "show_whitespaces": "all",
  "wrap_guides": [80],
  "inlay_hints": {
    "enabled": true
  },
  "scrollbar": {
    "git_diff": false
  },
  "buffer_font_features": {
    "calt": false
  },
  "format_on_save": "on",
  "languages": {
    "Python": {
      "wrap_guides": [100],
      "format_on_save": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "closingBraceHints": {
            "enable": false
          },
          "parameterHints": {
            "enable": false
          }
        },
        "imports": {
          "prefix": "crate",
          "granularity": {
            "group": "crate"
          }
        },
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
      }
    },
    "taplo": {
      "formatting": {
        "compact_inline_tables": true
      }
    }
  }
}
